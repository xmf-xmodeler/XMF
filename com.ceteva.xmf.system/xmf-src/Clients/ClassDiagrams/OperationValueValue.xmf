	  @Operation expandWidth()
    
      	if self.width <> self.value.width + 2 then
        	self.resize(self.value.width + 2,height)
      	end
      end
      
    @Operation expandHeight()
      
      if self.height <> self.value.height then
        self.resize(width,self.value.height)
      end
    end
    
