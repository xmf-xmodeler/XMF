		@Constructor(text,x,y)
			//self.createText(text)	
            self.value := Text(text,1,0,true,false,false,Color(255,60,60));
			self.add(self.value);
			self.fillColor := Color(0,0,0);
			self.hideAllEdges();
			self
		end
		
